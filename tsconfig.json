{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "removeComments": true,
    "module": "CommonJS",
    // "sourceMap": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true, /* enable all strict type-checking options */
    "baseUrl": "./", // 添加这行，设置基准目录为项目根目录
    "paths": {
      "~/*": ["test/mockComponents/*"], // 将`~/`设置为`src/test`目录的别名
      "~/ddd/*": ["test/mockComponents/*"]
    },
    "types": [
      "annil",
      "hry-types",
      "node",
      "miniprogram-api-typings",
      "mobx"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
